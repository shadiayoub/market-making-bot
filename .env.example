# LBank API Credentials
# Copy this file to .env and fill in your actual credentials

# API Key from LBank
LBANK_API_KEY=your_api_key_here

# API Secret from LBank (hex string for HMACSHA256, or RSA private key for RSA)
LBANK_API_SECRET=your_api_secret_here

# Sign method: "HMACSHA256" (recommended) or "RSA"
LBANK_SIGN_METHOD=HMACSHA256

# Base URL (usually https://api.lbkex.com/)
LBANK_BASE_URL=https://api.lbkex.com/

# Trading Pair Configuration
TRADING_PAIR=acces_usdt
TOKEN_SYMBOL=acces

# LBank Compliance Mode
# Enable to concentrate 500-1000 USDT within Â±1% of market price (default: true)
ENABLE_COMPLIANCE_MODE=true

# Safety Features Configuration
# Maximum spread percentage - skip trading if spread exceeds this (default: 30.0)
MAX_SPREAD_PCT=30.0

# Maximum loss percentage - stop bot if loss exceeds this (default: 20.0)
MAX_LOSS_PCT=20.0

# Maximum exposure percentage - limit total exposure to this % of balance (default: 80.0)
MAX_EXPOSURE_PCT=80.0

# Enable distance reduction on wide spreads (default: true)
REDUCE_DISTANCE_ON_WIDE_SPREAD=true

# Spread threshold for distance reduction (default: 20.0)
WIDE_SPREAD_THRESHOLD=20.0

# Adaptive Pricing Configuration
# Enable gradual price tightening if orders don't fill (default: true)
ENABLE_ADAPTIVE_PRICING=true

# Rate of price tightening per iteration (default: 0.001 = 0.1%)
TIGHTENING_RATE=0.001

# Number of unfilled iterations before starting to tighten (default: 2)
TIGHTENING_TRIGGER=2

# Iteration Sleep Time Configuration
# For long-term strategies (3+ days), use longer sleep times to reduce API calls
# Base sleep time in seconds (default: 8, recommended for 3-day: 60-120)
BASE_SLEEP_TIME=60

# Maximum sleep time in seconds (default: 20, recommended for 3-day: 180-300)
MAX_SLEEP_TIME=180

# Minimum sleep time in seconds (default: 1, recommended for 3-day: 30-60)
MIN_SLEEP_TIME=30

# Maximum Buy Price Configuration
# Set maximum buy price limit (e.g., 0.22). Leave empty or set to 0 to disable.
# When set, all buy orders will be capped at this price, and any existing buy orders above this will be cancelled.
MAX_BUY_PRICE=0.22

# Reference Price Based Market Making
# Enable reference price-based pricing (buy band -1%, sell band +1% from reference)
ENABLE_REFERENCE_PRICE_MODE=false

# Reference price for market making (e.g., 0.2000)
# Buy band: reference * 0.99 to reference * 0.9998 (-1%)
# Sell band: reference * 1.0002 to reference * 1.01 (+1%)
REFERENCE_PRICE=0.2000

# Order value per side (default: 250 USDT)
ORDER_VALUE_PER_SIDE=250

# Number of orders per side (default: 10)
ORDERS_PER_SIDE=10

# Ladder order sizing: smaller near price, larger away
# Format: "15,15,15,25,25,25,35,35,35,35" (first 3: 15 USDT, next 3: 25 USDT, last 4: 35 USDT)
# Leave empty to use equal distribution
LADDER_ORDER_SIZES=15,15,15,25,25,25,35,35,35,35

# Random delay range for refresh (seconds)
# Adds random delay between MIN_RANDOM_DELAY and MAX_RANDOM_DELAY to reduce tracking
MIN_RANDOM_DELAY=1
MAX_RANDOM_DELAY=3
