# LBank API Credentials
# Copy this file to .env and fill in your actual credentials

# API Key from LBank
LBANK_API_KEY=your_api_key_here

# API Secret from LBank (hex string for HMACSHA256, or RSA private key for RSA)
LBANK_API_SECRET=your_api_secret_here

# Sign method: "HMACSHA256" (recommended) or "RSA"
LBANK_SIGN_METHOD=HMACSHA256

# Base URL (usually https://api.lbkex.com/)
LBANK_BASE_URL=https://api.lbkex.com/

# Trading Pair Configuration
TRADING_PAIR=acces_usdt
TOKEN_SYMBOL=acces

# LBank Compliance Mode
# Enable to concentrate 500-1000 USDT within Â±1% of market price (default: true)
ENABLE_COMPLIANCE_MODE=true

# Safety Features Configuration
# Maximum spread percentage - skip trading if spread exceeds this (default: 30.0)
MAX_SPREAD_PCT=30.0

# Maximum loss percentage - stop bot if loss exceeds this (default: 20.0)
MAX_LOSS_PCT=20.0

# Maximum exposure percentage - limit total exposure to this % of balance (default: 80.0)
MAX_EXPOSURE_PCT=80.0

# Enable distance reduction on wide spreads (default: true)
REDUCE_DISTANCE_ON_WIDE_SPREAD=true

# Spread threshold for distance reduction (default: 20.0)
WIDE_SPREAD_THRESHOLD=20.0

# Adaptive Pricing Configuration
# Enable gradual price tightening if orders don't fill (default: true)
ENABLE_ADAPTIVE_PRICING=true

# Rate of price tightening per iteration (default: 0.001 = 0.1%)
TIGHTENING_RATE=0.001

# Number of unfilled iterations before starting to tighten (default: 2)
TIGHTENING_TRIGGER=2
